<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Furina do Discord - Lista de Comandos</title>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Raleway:wght@400;600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
  /* Reset b√°sico */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Raleway', sans-serif;
    background: radial-gradient(ellipse at top, #0b1c3a 0%, #08172e 70%, #06152a 100%);
    color: white;
    overflow-x: hidden;
  }

  /* Header */
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 70px;
    background-color: rgba(6, 21, 42, 0.9);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    z-index: 1100;
  }

  header .logo {
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    color: #3DD1D9;
    font-weight: bold;
    font-family: 'Playfair Display', serif;
  }

  header .logo img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
    border: 2px solid #3DD1D9;
  }

  /* Sidebar */
  .sidebar {
    position: fixed;
    top: 70px; /* abaixo do header */
    left: 0;
    width: 250px;
    height: calc(100vh - 70px);
    background: rgba(6, 21, 42, 0.95);
    padding: 1rem 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 2px 0 10px rgba(0,0,0,0.7);
    transition: transform 0.3s ease;
    z-index: 1050;
    /* No transform aqui, sidebar fica vis√≠vel no desktop */
  }

  .sidebar a {
    color: #3DD1D9;
    padding: 1rem 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.3s, color 0.3s;
    cursor: pointer;
  }

  .sidebar a:hover {
    background: #3DD1D9;
    color: #08172E;
    border-radius: 0 20px 20px 0;
  }

  /* Mobile: sidebar escondido */
  .sidebar.mobile-hidden {
    transform: translateX(-100%);
  }

  /* Mobile: sidebar vis√≠vel */
  .sidebar.mobile-show {
    transform: translateX(0);
    box-shadow: 2px 0 20px rgba(61, 209, 217, 0.6);
    background-color: rgba(6, 21, 42, 0.98);
  }

  /* Bot√£o toggle do sidebar */
  .menu-toggle {
    display: none;
    font-size: 1.8rem;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    user-select: none;
  }

  /* Conte√∫do principal */
  main {
    margin-left: 250px;
    padding: 90px 2rem 2rem 2rem; /* espa√ßo para header e sidebar */
    transition: margin-left 0.3s ease;
  }

  /* Aba do comando */
  .command-tab {
    background: rgba(6, 21, 42, 0.8);
    border-radius: 12px;
    margin-bottom: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    transition: background 0.3s;
  }

  .command-tab:hover {
    background: rgba(61, 209, 217, 0.15);
  }

  .command-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    font-weight: 700;
    font-size: 1.25rem;
    color: #3DD1D9;
    cursor: pointer;
    user-select: none;
  }

  .command-header .icon {
    transition: transform 0.3s ease;
  }

  .command-tab.open .command-header .icon {
    transform: rotate(90deg);
  }

  .command-details {
    padding: 0 1.5rem 1.5rem 1.5rem;
    color: #DDEEFF;
    display: none;
    animation: fadeInDetails 0.4s ease forwards;
  }

  .command-tab.open .command-details {
    display: block;
  }

  .command-details img {
    max-width: 100%;
    border-radius: 10px;
    margin-top: 0.8rem;
    box-shadow: 0 0 10px #3DD1D9;
  }

  /* Anima√ß√£o para abrir detalhes */
  @keyframes fadeInDetails {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Footer */
  footer {
    background-color: #0a1e33;
    padding: 2rem 1rem;
    text-align: center;
    border-top: 2px solid #3DD1D9;
    color: #A0CFE8;
    font-size: 0.9rem;
  }

  footer a {
    margin: 0 1rem;
    text-decoration: none;
    color: #3DD1D9;
    font-size: 1.8rem;
    transition: transform 0.2s;
  }

  footer a:hover {
    color: #ffffff;
    transform: scale(1.2);
  }

  /* Responsividade */
  @media (max-width: 768px) {
    /* Mostrar bot√£o toggle */
    .menu-toggle {
      display: block;
    }

    /* Sidebar escondido por padr√£o no mobile */
    .sidebar {
      transform: translateX(-100%);
      width: 250px;
      /* altura e posi√ß√£o fixas j√° definidas */
    }

    main {
      margin-left: 0;
      padding: 90px 1rem 2rem 1rem;
      transition: none;
    }
  }
</style>
</head>
<body>

<header>
  <div class="logo">
    <img src="img/furina.jpg" alt="Furina do Discord" />
    Furina do Discord
  </div>
  <button class="menu-toggle" aria-label="Abrir menu sidebar">&#9776;</button>
</header>

<nav class="sidebar">
  <a href="/">In√≠cio</a>
    <a href="/termos">Termos de Servi√ßo</a>
    <a href="/privacidade">Pol√≠tica de Privacidade</a>
    <a href="/comandos">Lista de Comandos</a>
    <a href="https://discord.gg/https://discord.gg/MkneaxC8jY" target="_blank">Servidor Oficial</a>
</nav>

<main>
  <h1>Lista de Comandos</h1>
  <div id="comandosContainer"></div>
</main>

<footer>
  <div>
    <a href="https://youtube.com/@furinadodiscord?si=tQzMg-l5YefGbawG" target="_blank" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
    <a href="https://www.tiktok.com/@furina.do.discord?_t=ZM-8xJUebYYff3&_r=1" target="_blank" aria-label="TikTok"><i class="fab fa-tiktok"></i></a>
    <a href="https://discord.gg/MkneaxC8jY" target="_blank" aria-label="Discord"><i class="fab fa-discord"></i></a>
  </div>
  <p>Feito por <strong>ThallesKraft</strong> com amor e drama üíß</p>
</footer>

<script>
  const menuToggle = document.querySelector('.menu-toggle');
  const sidebar = document.querySelector('.sidebar');

  function checkWindowSize() {
    if (window.innerWidth <= 768) {
      sidebar.classList.add('mobile-hidden');
      sidebar.classList.remove('mobile-show');
    } else {
      sidebar.classList.remove('mobile-hidden', 'mobile-show');
    }
  }

  window.addEventListener('resize', checkWindowSize);
  window.addEventListener('load', checkWindowSize);

  menuToggle.addEventListener('click', () => {
    if (sidebar.classList.contains('mobile-show')) {
      sidebar.classList.remove('mobile-show');
      sidebar.classList.add('mobile-hidden');
    } else {
      sidebar.classList.add('mobile-show');
      sidebar.classList.remove('mobile-hidden');
    }
  });

  // Carregar comandos do JSON
  async function carregarComandos() {
    try {
      const res = await fetch('comandos.json');
      if (!res.ok) throw new Error('Erro ao carregar comandos.json');
      const comandos = await res.json();

      const container = document.getElementById('comandosContainer');
      container.innerHTML = '';

      comandos.forEach((cmd, i) => {
        const tab = document.createElement('div');
        tab.classList.add('command-tab');

        tab.innerHTML = `
          <div class="command-header" tabindex="0" aria-expanded="false" role="button" aria-controls="details-${i}">
            <span>${cmd.nome}</span>
            <i class="fas fa-chevron-right icon"></i>
          </div>
          <div class="command-details" id="details-${i}">
            <p>${cmd.descri√ß√£o}</p>
            ${cmd.imagem ? `<img src="${cmd.imagem}" alt="Imagem do comando ${cmd.nome}" />` : ''}
          </div>
        `;

        const header = tab.querySelector('.command-header');

        header.addEventListener('click', () => {
          const isOpen = tab.classList.toggle('open');
          header.setAttribute('aria-expanded', isOpen);
        });

        header.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            header.click();
          }
        });

        container.appendChild(tab);
      });
    } catch (error) {
      console.error(error);
      document.getElementById('comandosContainer').innerText = 'Erro ao carregar a lista de comandos.';
    }
  }

  carregarComandos();
</script>

</body>
</html>
