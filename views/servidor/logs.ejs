<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Logs - Furina do Discord</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Fonts e Ícones -->
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Raleway:wght@400;600&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />

  <style>
    /* === Reset básico === */
    *, *::before, *::after {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Raleway', sans-serif;
      background: radial-gradient(ellipse at top, #0b1c3a 0%, #06152a 100%);
      color: #cdd6f4;
      display: flex;
      min-height: 100vh;
      user-select: none;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    a {
      text-decoration: none;
      color: inherit;
      user-select: none;
      transition: color 0.3s ease;
    }

    a:hover, a:focus {
      color: #29b8c3;
      outline: none;
    }

    /* === SIDEBAR === */
    aside.sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 200px;
      background: rgba(10, 25, 45, 0.95);
      backdrop-filter: blur(10px);
      box-shadow: 2px 0 12px rgba(0,0,0,0.8);
      padding: 2rem 1.2rem;
      display: flex;
      flex-direction: column;
      gap: 1.8rem;
      z-index: 1000;
      border-right: 2px solid #0d2e52;
      transition: transform 0.3s ease;
      user-select: none;
      font-weight: 600;
      font-size: 1.1rem;
    }

    aside.sidebar a {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      color: #3dd1d9;
      padding: 0.75rem 1rem;
      border-radius: 0.7rem;
      box-shadow: inset 0 0 6px transparent;
      transition:
        background-color 0.3s ease,
        color 0.3s ease,
        box-shadow 0.3s ease,
        transform 0.15s ease;
    }

    aside.sidebar a:hover,
    aside.sidebar a:focus {
      background-color: #3dd1d9;
      color: #08172e;
      box-shadow: inset 0 0 14px #29b8c3;
      transform: scale(1.05);
      outline: none;
    }

    aside.sidebar a i {
      font-size: 1.3rem;
    }

    /* Sidebar escondido no mobile */
    aside.sidebar.hide-mobile {
      transform: translateX(-100%);
    }

    /* === BOTÃO MOBILE PARA TOGGLE SIDEBAR === */
    button.mobile-toggle {
      display: none;
      position: fixed;
      top: 1rem;
      left: 1rem;
      z-index: 1101;
      background-color: #3dd1d9;
      color: #08172e;
      border: none;
      border-radius: 0.7rem;
      padding: 0.55rem 1.4rem;
      font-weight: 700;
      font-size: 1.3rem;
      cursor: pointer;
      box-shadow: 0 4px 12px rgba(61, 209, 217, 0.7);
      user-select: none;
      transition: background-color 0.3s ease;
    }

    button.mobile-toggle:hover,
    button.mobile-toggle:focus {
      background-color: #29b8c3;
      outline: none;
      box-shadow: 0 0 14px #29b8c3;
    }

    /* === CONTEÚDO PRINCIPAL === */
    main.content {
      margin-left: 200px;
      padding: 2rem 2rem 4rem 2rem;
      flex-grow: 1;
      max-width: 900px;
      width: 100%;
      user-select: text;
    }

    /* TÍTULO */
    h1.title {
      font-family: 'Playfair Display', serif;
      font-size: 2.8rem;
      color: #3dd1d9;
      margin-bottom: 2.5rem;
      user-select: text;
      text-shadow: 0 0 10px #3dd1d9aa;
    }

    /* MENSAGEM SUCESSO */
    .success-msg {
      background-color: #3dd1d9;
      color: #08172e;
      font-weight: 700;
      padding: 1rem 2rem;
      border-radius: 0.7rem;
      margin-bottom: 2rem;
      max-width: 420px;
      box-shadow: 0 0 14px #3dd1d9cc;
      text-align: center;
      font-size: 1.15rem;
      user-select: none;
    }

    /* BOTÃO ATIVAR/DESATIVAR */
    button#toggleBtn {
      cursor: pointer;
      font-weight: 700;
      font-size: 1.3rem;
      padding: 0.75rem 2.8rem;
      border-radius: 0.7rem;
      border: none;
      box-shadow: 0 5px 12px rgba(0,0,0,0.35);
      margin-bottom: 2.5rem;
      transition: background-color 0.35s ease, color 0.35s ease;
      user-select: none;
      display: inline-block;
      min-width: 180px;
      text-align: center;
      letter-spacing: 0.05em;
      user-select: none;
      font-family: 'Raleway', sans-serif;
    }

    button#toggleBtn.toggle-on {
      background-color: #2ecc71;
      color: #08172e;
      box-shadow: 0 0 15px #27ae60;
    }

    button#toggleBtn.toggle-off {
      background-color: #e74c3c;
      color: #fff;
      box-shadow: 0 0 15px #c0392b;
    }

    button#toggleBtn:focus {
      outline: 3px solid #3dd1d9;
      outline-offset: 3px;
    }

    /* LISTA DE CANAIS */
    ul.channel-list {
      list-style: none;
      padding: 0;
      margin: 0 0 3.5rem 0;
      max-height: 300px;
      overflow-y: auto;
      width: 100%;
      max-width: 420px;
      user-select: none;
      border: 1.5px solid #3dd1d9;
      border-radius: 0.7rem;
      background-color: rgba(6, 21, 42, 0.92);
      box-shadow: inset 0 0 10px #3dd1d9aa;
      scroll-behavior: smooth;
      transition: border-color 0.3s ease;
    }

    ul.channel-list:hover {
      border-color: #29b8c3;
      box-shadow: inset 0 0 16px #29b8c3cc;
    }

    ul.channel-list li {
      margin: 0;
      border-bottom: 1px solid #3dd1d9;
    }

    ul.channel-list li:last-child {
      border-bottom: none;
    }

    /* ESCONDE INPUT RADIO */
    ul.channel-list input[type="radio"] {
      display: none;
    }

    /* LABEL DOS CANAIS */
    ul.channel-list label {
      display: block;
      padding: 1rem 1.7rem;
      cursor: pointer;
      font-weight: 600;
      color: #3dd1d9;
      font-size: 1.1rem;
      transition: background-color 0.25s ease, color 0.25s ease;
      user-select: none;
      letter-spacing: 0.02em;
      text-shadow: 0 0 4px #3dd1d9bb;
    }

    /* CANAL SELECIONADO */
    ul.channel-list input[type="radio"]:checked + label {
      background-color: #3dd1d9;
      color: #08172e;
      font-weight: 700;
      box-shadow: inset 0 0 14px #29b8c3;
    }

    /* SCROLLBAR PERSONALIZADO */
    ul.channel-list::-webkit-scrollbar {
      width: 8px;
    }

    ul.channel-list::-webkit-scrollbar-track {
      background: transparent;
    }

    ul.channel-list::-webkit-scrollbar-thumb {
      background-color: #3dd1d9;
      border-radius: 5px;
    }

    /* BOTÃO SALVAR */
    button.save-btn {
      background-color: #3dd1d9;
      color: #08172e;
      border: none;
      border-radius: 0.7rem;
      padding: 1rem 3.2rem;
      font-weight: 700;
      font-size: 1.35rem;
      cursor: pointer;
      box-shadow: 0 6px 14px rgba(61, 209, 217, 0.7);
      user-select: none;
      transition: background-color 0.3s ease, color 0.3s ease;
      display: block;
      margin: 0 auto;
      min-width: 200px;
      letter-spacing: 0.05em;
      font-family: 'Raleway', sans-serif;
    }

    button.save-btn:hover,
    button.save-btn:focus {
      background-color: #29b8c3;
      color: #fff;
      outline: none;
      box-shadow: 0 0 18px #29b8c3;
    }

    /* === RESPONSIVIDADE MOBILE === */
    @media (max-width: 768px) {
      /* Mostrar botão toggle */
      button.mobile-toggle {
        display: block;
      }

      /* Sidebar móvel */
      aside.sidebar {
        width: 70%;
        max-width: 280px;
        height: 100vh;
        padding: 1.8rem 1rem;
        flex-direction: column;
        border-right: 2px solid #0d2e52;
        backdrop-filter: blur(10px);
        box-shadow: 2px 0 12px rgba(0,0,0,0.8);
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        font-size: 1.05rem;
      }

      aside.sidebar.show {
        transform: translateX(0);
      }

      main.content {
        margin-left: 0;
        margin-top: 0;
        padding: 2rem 1rem 4rem 1rem;
        max-width: 100%;
      }

      ul.channel-list {
        max-height: 220px;
      }
    }
  </style>
</head>
<body>
  <!-- Botão Mobile para abrir/fechar sidebar -->
  <button
    class="mobile-toggle"
    aria-label="Abrir menu"
    onclick="toggleSidebar()"
  >
    ☰ Menu
  </button>

  <!-- Sidebar -->
  <aside
    class="sidebar"
    role="navigation"
    aria-label="Menu principal"
    id="sidebar"
  >
    <a href="/dashboard" tabindex="0">
      <i class="fa-solid fa-house"></i> Início
    </a>
    <a href="/dashboard/<%= guild.id %>/logs" tabindex="0">
      <i class="fa-solid fa-file-lines"></i> Logs
    </a>
    <a href="/dashboard/<%= guild.id %>/comandos" tabindex="0">
      <i class="fa-solid fa-gear"></i> Comandos
    </a>
    <a href="/dashboard/<%= guild.id %>" tabindex="0">
      <i class="fa-solid fa-wrench"></i> Configurações
    </a>
  </aside>

  <!-- Conteúdo principal -->
  <main class="content">
    <h1 class="title"><%= guild.name %></h1>

    <% if (success) { %>
      <div
        class="success-msg"
        role="alert"
        aria-live="assertive"
      >
        ✅ Configurações salvas com sucesso!
      </div>
    <% } %>

    <form
      id="logForm"
      method="POST"
      action="/dashboard/<%= guild.id %>/logs"
      novalidate
    >
      <!-- Botão ativar/desativar -->
      <h1>Logs de Reações</h1>
      <button
        type="button"
        id="toggleBtn"
        class="<%= logs.ativado ? 'toggle-on' : 'toggle-off' %>"
        aria-pressed="<%= logs.ativado ? 'true' : 'false' %>"
        aria-label="Alternar ativação dos logs"
      >
        <%= logs.ativado ? "Ativado" : 'Desativado' %>
      </button>

      <!-- Lista dos canais -->
      <ul
        class="channel-list"
        role="radiogroup"
        aria-label="Selecione o canal para logs"
      >
        <% channels.forEach(channel => { %>
          <li>
            <input
              type="radio"
              id="channel_<%= channel.id %>"
              name="selectedChannel"
              value="<%= channel.id %>"
              <%= logs.channel === channel.id ? 'checked' : '' %>
              required
            />
            <label for="channel_<%= channel.id %>">#<%= channel.name %></label>
          </li>
        <% }) %>
      </ul>

      <!-- Campo hidden para ativação -->
      <input
        type="hidden"
        id="activatedInput"
        name="activated"
        value="<%= logs.activated ? 'true' : 'false' %>"
      />

      <!-- Botão salvar -->
      <button
        type="submit"
        class="save-btn"
        aria-label="Salvar configurações de logs"
      >
        💾 Salvar Configurações
      </button>
    </form>
  </main>

  <script>
    // Toggle ativar/desativar logs
    (() => {
      const toggleBtn = document.getElementById('toggleBtn');
      const activatedInput = document.getElementById('activatedInput');

      toggleBtn.addEventListener('click', () => {
        const isActive = toggleBtn.classList.contains('toggle-on');

        if (isActive) {
          toggleBtn.classList.replace('toggle-on', 'toggle-off');
          toggleBtn.textContent = 'Desativado';
          toggleBtn.setAttribute('aria-pressed', 'false');
          activatedInput.value = 'false';
        } else {
          toggleBtn.classList.replace('toggle-off', 'toggle-on');
          toggleBtn.textContent = 'Ativado';
          toggleBtn.setAttribute('aria-pressed', 'true');
          activatedInput.value = 'true';
        }
      });
    })();

    // Toggle sidebar mobile
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('show');
    }
  </script>
</body>
</html>
