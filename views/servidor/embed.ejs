<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Enviar Embed - Furina do Discord</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Raleway:wght@400;600&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
  <style>
    /* Reset b√°sico */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Raleway', sans-serif;
      background: radial-gradient(
        ellipse at top,
        #0b1c3a 0%,
        #08172e 70%,
        #06152a 100%
      );
      color: white;
      overflow-x: hidden;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    header {
      background-color: rgba(6, 21, 42, 0.9);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
      position: sticky;
      top: 0;
      z-index: 1100;
    }

    .logo {
      display: flex;
      align-items: center;
      font-size: 1.5rem;
      color: #3dd1d9;
      font-weight: bold;
      font-family: 'Playfair Display', serif;
      user-select: none;
    }

    .logo img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
      border: 2px solid #3dd1d9;
      object-fit: cover;
    }

    /* Sidebar */
    nav.sidebar {
      background-color: rgba(6, 21, 42, 0.9);
      width: 220px;
      height: calc(100vh - 68px); /* header height 68px aprox */
      position: fixed;
      top: 68px;
      left: 0;
      padding-top: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.4);
      z-index: 1000;
      transition: transform 0.3s ease;
    }

    nav.sidebar a {
      color: #3dd1d9;
      text-decoration: none;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      font-size: 1.1rem;
      border-left: 4px solid transparent;
      transition: background-color 0.3s, border-color 0.3s;
      user-select: none;
    }

    nav.sidebar a:hover,
    nav.sidebar a.active {
      background-color: rgba(61, 209, 217, 0.1);
      border-left-color: #3dd1d9;
      color: #3dd1d9;
    }

    /* Conte√∫do principal */
    main.content {
      margin-left: 220px;
      padding: 2rem;
      flex: 1;
      max-width: 800px;
      width: 100%;
      margin-top: 68px;
    }

    main.content h1 {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #3dd1d9;
      text-align: center;
    }

    /* Formul√°rio */
    form.embed-form {
      background-color: rgba(255, 255, 255, 0.03);
      border: 2px solid #3dd1d9;
      padding: 2rem;
      border-radius: 1rem;
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      font-size: 1rem;
    }

    label {
      font-weight: 600;
      color: #3dd1d9;
      user-select: none;
    }

    input,
    textarea,
    select {
      background-color: #0e223f;
      border: 2px solid #3dd1d9;
      border-radius: 0.6rem;
      color: white;
      padding: 0.7rem;
      font-size: 1rem;
      font-family: 'Raleway', sans-serif;
      transition: border-color 0.3s ease;
    }

    input:focus,
    textarea:focus,
    select:focus {
      outline: none;
      border-color: #29b8c3;
      background-color: #123052;
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    button.submit-btn {
      background-color: #3dd1d9;
      color: #08172e;
      border: none;
      border-radius: 0.5rem;
      padding: 0.9rem 0;
      font-weight: 700;
      cursor: pointer;
      transition: background-color 0.3s ease;
      user-select: none;
    }

    button.submit-btn:hover {
      background-color: #29b8c3;
    }

    /* Mensagens de erro e sucesso */
    .error-msg,
    .success-msg {
      max-width: 800px;
      margin: 1rem auto;
      padding: 1rem;
      border-radius: 0.5rem;
      font-weight: 600;
      text-align: center;
      user-select: none;
    }

    .error-msg {
      background-color: #ff4d4d;
      color: white;
    }

    .success-msg {
      background-color: #3dd1d9;
      color: #08172e;
    }

    /* Responsividade mobile */

    /* Bot√£o para abrir sidebar */
    .sidebar-toggle-btn {
      display: none;
      background: none;
      border: none;
      color: #3dd1d9;
      font-size: 1.8rem;
      cursor: pointer;
      user-select: none;
    }

    @media (max-width: 768px) {
      nav.sidebar {
        position: fixed;
        top: 68px;
        left: 0;
        height: calc(100vh - 68px);
        transform: translateX(-100%);
        box-shadow: none;
        width: 200px;
        z-index: 1500;
      }

      nav.sidebar.active {
        transform: translateX(0);
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.4);
      }

      main.content {
        margin-left: 0;
        margin-top: 68px;
        padding: 1.5rem 1rem;
        width: 100%;
        max-width: 100%;
      }

      .sidebar-toggle-btn {
        display: block;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">
      <!-- Exemplo est√°tico de logo -->
      <img src="/img/furina.jpg" alt="Logo Furina" />
      Furina do Discord
    </div>
    <button
      aria-label="Abrir menu"
      class="sidebar-toggle-btn"
      id="sidebarToggleBtn"
      title="Abrir menu"
    >
      <i class="fas fa-bars"></i>
    </button>
  </header>

  <nav class="sidebar" id="sidebar">
    <a href="/dashboard" >Servidores</a>
    <a href="/embed" class="active">Enviar Embed</a>
  </nav>

  <main class="content">
    <h1>Enviar Embed para <%= guild.name %></h1>

    <% if (error) { %>
      <div class="error-msg"><%= error %></div>
    <% } %>

    <% if (success) { %>
      <div class="success-msg">‚úÖ Mensagem enviada com sucesso!</div>
    <% } %>

    <form method="POST" class="embed-form">
      <label for="channelId">Selecione o Canal:</label>
      <select name="channelId" id="channelId" required>
        <% channels.forEach((c) => { %>
        <option value="<%= c.id %>"><%= c.name %></option>
        <% }); %>
      </select>

      <label for="title">T√≠tulo da Embed:</label>
      <input
        type="text"
        name="title"
        id="title"
        placeholder="Opcional"
        autocomplete="off"
      />

      <label for="description"
        >Descri√ß√£o: <span style="color: red">*</span></label
      >
      <textarea
        name="description"
        id="description"
        placeholder="Conte√∫do da embed"
        rows="4"
        required
      ></textarea>

      <label for="footer">Rodap√© (footer):</label>
      <input
        type="text"
        name="footer"
        id="footer"
        placeholder="Opcional"
        autocomplete="off"
      />

      <label for="color">Cor da Embed (hex):</label>
      <input
        type="text"
        name="color"
        id="color"
        placeholder="#3dd1d9"
        autocomplete="off"
      />

      <label for="content">Mensagem fora da embed (content):</label>
      <textarea
        name="content"
        id="content"
        placeholder="Texto fora da embed"
        rows="2"
      ></textarea>

      <button type="submit" class="submit-btn">üì§ Enviar Embed</button>
    </form>
  </main>

  <script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('sidebarToggleBtn');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });

    // Fechar sidebar clicando fora (mobile)
    document.addEventListener('click', (e) => {
      if (
        !sidebar.contains(e.target) &&
        !toggleBtn.contains(e.target) &&
        sidebar.classList.contains('active')
      ) {
        sidebar.classList.remove('active');
      }
    });
  </script>
</body>
</html>
