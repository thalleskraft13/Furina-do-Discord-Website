  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Raleway', sans-serif;
      background: radial-gradient(ellipse at top, #0b1c3a 0%, #08172e 70%, #06152a 100%);
      color: white;
      overflow-x: hidden;
    }

    header {
      background-color: rgba(6, 21, 42, 0.9);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo {
      display: flex;
      align-items: center;
      font-size: 1.5rem;
      color: #3DD1D9;
      font-weight: bold;
      font-family: 'Playfair Display', serif;
    }

    .logo img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
      border: 2px solid #3DD1D9;
    }

    .nav-links {
      display: flex;
      gap: 2rem;
    }

    .nav-links a {
      text-decoration: none;
      color: #3DD1D9;
      font-weight: 600;
      transition: color 0.3s;
    }

    .nav-links a:hover {
      color: #ffffff;
    }

    .menu-toggle {
      display: none;
      font-size: 1.5rem;
      background: none;
      border: none;
      color: white;
      cursor: pointer;
    }

    .mobile-menu {
      display: none;
      flex-direction: column;
      background-color: rgba(6, 21, 42, 0.95);
      position: absolute;
      top: 60px;
      left: 0;
      width: 100%;
      padding: 1rem 2rem;
    }

    .mobile-menu a {
      padding: 0.5rem 0;
      color: #3DD1D9;
      text-decoration: none;
      font-weight: 600;
    }

    main {
      max-width: 900px;
      margin: 2rem auto;
      background: rgba(6, 21, 42, 0.8);
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    h1, h2 {
      font-family: 'Playfair Display', serif;
      color: #3DD1D9;
    }

    h1 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }

    h2 {
      margin-top: 2rem;
      font-size: 1.5rem;
    }

    p {
      margin: 1rem 0;
      line-height: 1.6;
      color: #DDEEFF;
    }

    footer {
      background-color: #0a1e33;
      padding: 2rem 1rem;
      text-align: center;
      border-top: 2px solid #3DD1D9;
    }

    footer p {
      color: #A0CFE8;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }

      .menu-toggle {
        display: block;
      }

      .mobile-menu.show {
        display: flex;
      }
    }
  </style>
</head>
<body>
