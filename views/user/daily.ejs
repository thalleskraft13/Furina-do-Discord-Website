<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Recompensa Di√°ria - A Furina do Discord</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Raleway:wght@400;600&display=swap" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Raleway', sans-serif;
      background: radial-gradient(ellipse at top, #0b1c3a 0%, #08172e 70%, #06152a 100%);
      color: white;
      overflow-x: hidden;
    }
    header {
      background-color: rgba(6, 21, 42, 0.9);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .logo {
      display: flex;
      align-items: center;
      font-size: 1.5rem;
      color: #3DD1D9;
      font-weight: bold;
      font-family: 'Playfair Display', serif;
    }
    .logo img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
      border: 2px solid #3DD1D9;
    }
    .menu-toggle {
      display: none;
      font-size: 1.5rem;
      background: none;
      border: none;
      color: white;
      cursor: pointer;
    }
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 220px;
      background-color: #06152a;
      padding-top: 80px;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-left: 1rem;
      z-index: 999;
    }
    .sidebar a {
      color: #3DD1D9;
      text-decoration: none;
      font-weight: 600;
      transition: 0.3s;
    }
    .sidebar a:hover {
      color: #ffffff;
    }
    .content {
      margin-left: 240px;
      padding: 3rem 2rem;
      text-align: center;
    }
    .daily-img {
      max-width: 300px;
      margin: 0 auto 2rem;
      display: block;
    }
    h1 {
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      color: #3DD1D9;
      margin-bottom: 1rem;
    }
    .msg {
      font-size: 1.2rem;
      color: #d2e9ff;
      margin-bottom: 2rem;
    }
    .recompensa {
      font-size: 2rem;
      font-weight: bold;
      color: #ffffff;
      margin-top: 1rem;
      animation: recompensaAnimar 1s ease forwards;
    }
    .btn {
      display: inline-block;
      margin-top: 2rem;
      padding: 0.75rem 2rem;
      background: #3DD1D9;
      color: #081d35;
      border-radius: 2rem;
      text-decoration: none;
      font-weight: 600;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      transition: transform 0.3s, background 0.3s;
    }
    .btn:hover {
      background: #29b8c3;
      transform: scale(1.05);
    }
    @keyframes recompensaAnimar {
      0% { transform: scale(0.8); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    footer {
      background-color: #0a1e33;
      padding: 2rem 1rem;
      text-align: center;
      border-top: 2px solid #3DD1D9;
      margin-top: 3rem;
    }
    footer a {
      margin: 0 1rem;
      text-decoration: none;
      color: #3DD1D9;
      font-size: 1.8rem;
      transition: transform 0.2s;
    }
    footer a:hover {
      color: #ffffff;
      transform: scale(1.2);
    }
    footer p {
      color: #A0CFE8;
      font-size: 0.9rem;
      margin-top: 1rem;
    }
    @media (max-width: 768px) {
      .sidebar {
        display: none;
      }
      .content {
        margin-left: 0;
      }
      .menu-toggle {
        display: block;
      }
      .sidebar.mobile-show {
        display: flex;
        position: absolute;
        top: 60px;
        width: 100%;
        height: auto;
        background-color: #06152a;
        flex-direction: column;
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">
      <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.<%= user.avatar.startsWith('a_') ? 'gif' : 'png' %>" alt="Avatar de <%= user.username %>" />
      <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/<%= parseInt(user.discriminator) % 5 %>.png" alt="Avatar padr√£o de <%= user.username %>" />
      <% } %>
      <%= user.username %>
    </div>
    <button class="menu-toggle" onclick="toggleSidebar()">‚ò∞</button>
  </header>

  <nav class="sidebar" id="sidebarLinks">
    <a href="/">In√≠cio</a>
    <a href="/termos">Termos de Servi√ßo</a>
    <a href="/privacidade">Pol√≠tica de Privacidade</a>
    <a href="/comandos">Lista de Comandos</a>
    <a href="https://discord.gg/MkneaxC8jY" target="_blank">Servidor Oficial</a>
  </nav>

  <section class="content">
    <img src="/img/furinaEsperando.png" alt="Furina esperando" class="daily-img" />
    <h1>A Furina do Discord te recebe!</h1>
    <p class="msg" id="dailyStatus">Verificando elegibilidade...</p>
    <div id="recompensaNum" class="recompensa"></div>
    <a class="btn" href="/dashboard">Voltar ao Palco</a>
  </section>

  <footer>
    <div>
      <a href="https://youtube.com/@furinadodiscord?si=tQzMg-l5YefGbawG" target="_blank"><i class="fab fa-youtube"></i></a>
      <a href="https://www.tiktok.com/@furina.do.discord?_t=ZM-8xJUebYYff3&_r=1" target="_blank"><i class="fab fa-tiktok"></i></a>
      <a href="https://discord.gg/MkneaxC8jY" target="_blank"><i class="fab fa-discord"></i></a>
    </div>
    <p>Feito por <strong>ThallesKraft</strong> com amor e drama üíß</p>
  </footer>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebarLinks");
      sidebar.classList.toggle("mobile-show");
    }

    async function verificarStatus() {
      const res = await fetch("/recompensas", { method: "POST" });
      const data = await res.json();
      const status = document.getElementById("dailyStatus");
      const recompensaEl = document.getElementById("recompensaNum");

      if (data.sucesso) {
        status.innerText = "Voc√™ foi agraciado com primogemas!";
        animarContador(data.recompensa);
      } else if (data.erro && data.tempoRestante) {
        atualizarTempo(data.tempoRestante);
      } else {
        status.innerText = data.erro || "Erro ao resgatar.";
      }
    }

    function atualizarTempo(tempo) {
      const status = document.getElementById("dailyStatus");
      function atualizar() {
        if (tempo <= 0) return location.reload();
        const horas = Math.floor(tempo / 3600000);
        const minutos = Math.floor((tempo % 3600000) / 60000);
        const segundos = Math.floor((tempo % 60000) / 1000);
        status.innerText = `Volte em ${horas}h ${minutos}m ${segundos}s para nova recompensa.`;
        tempo -= 1000;
        setTimeout(atualizar, 1000);
      }
      atualizar();
    }

    function animarContador(valor) {
      const el = document.getElementById("recompensaNum");
      let atual = 0;
      const incremento = Math.ceil(valor / 60);
      const animacao = setInterval(() => {
        atual += incremento;
        if (atual >= valor) {
          atual = valor;
          clearInterval(animacao);
        }
        el.innerText = `+${atual} primogemas!`;
      }, 30);
    }

    window.onload = verificarStatus;
  </script>
</body>
</html>
